<odoo>
    <record id="view_construction_report_form" model="ir.ui.view">
        <field name="name">construction.report.form</field>
        <field name="model">construction.report</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="date"/>
                        <field name="responsible"/>
                        <field name="weather_conditions"/>
                        <field name="customer"/>
                    </group>
                    <notebook>
                        <page string="Work Lines">
                            <field name="report" mode="tree">
                                <tree editable="bottom">
                                    <field name="time_from"/>
                                    <field name="time_to"/>
                                    <field name="time_total"/>
                                    <field name="work_name"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_construction_report_tree" model="ir.ui.view">
        <field name="name">construction.report.tree</field>
        <field name="model">construction.report</field>
        <field name="arch" type="xml">
            <tree>
                <field name="date"/>
                <field name="responsible"/>
                <field name="weather_conditions"/>
                <field name="customer"/>
            </tree>
        </field>
    </record>

    <record id="action_construction_report" model="ir.actions.act_window">
        <field name="name">Construction Reports</field>
        <field name="res_model">construction.report</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_construction" name="Construction" />
    <menuitem id="menu_construction_report" name="Reports" parent="menu_construction" action="action_construction_report" />
</odoo>