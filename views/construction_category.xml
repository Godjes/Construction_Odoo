<odoo>
    <record id="view_construction_work_category_form" model="ir.ui.view">
        <field name="name">construction.category.form</field>
        <field name="model">construction.category</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div name="button_box" position="inside">
                        <button class="oe_stat_button" type="object" name="action_open_works"
                            icon="fa-list">
                            <field string="Работы" name="works_count" widget="statinfo"/>
                        </button>
                    </div>
                    <group>
                        <field name="name" string="Категория"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_construction_work_category" model="ir.actions.act_window">
        <field name="name">Категории работ</field>
        <field name="res_model">construction.category</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_construction_category" name="Категории работ" parent="menu_construction" action="action_construction_work_category" sequence="20" />
</odoo>